<h1>Poketrade</h1>
<p>Welcome to Poketrade!</p>

 <div class="cards-container">
        {{#each allCards}}
        <div class="card-item">
            <p>{{this.name}}</p>
            <p>{{this.description}}</p>
            <p>{{this.image}}</p>
            <a href="/stock/{{this._id}}/details"><button>Details</button></a>
        </div>
        {{/each}}
    </div>

    <a href="/card/">
        <button>Check this card out!</button>
    </a>