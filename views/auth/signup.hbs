<div>

  <h3>Formulario de registro</h3>

  <form action="/auth/signup" method="post">

    <label for="name">Nombre de usuario</label>
    {{!-- <input type="text" name="username" required> --}}
    <input type="text" name="name" value="{{this.name}}">

    <br>

    <label for="adress">Dirección</label>
    <input type="text" name="adress" value="{{this.adress}}">

    <br>

    <label for="dateOfBirth">Fecha de nacimiento</label>
    <input type="date" name="dateOfBirth" value="{{this.dateOfBirth}}">

    <br>

    <label for="telNum">Num. Teléfono</label>
    <input type="String" name="telNum" value="{{this.telNum}}">

    <br>

    <label for="email">Correo electrónico</label>
    <input type="email" name="email" value="{{this.email}}">

    <br>

    <label for="password">Contraseña</label>
    <input type="password" name="password">

    <br>

       <label for="country">País</label>
      <input type="text" list="countries" name="country" id="countryInput" placeholder="Escribe el nombre del país">
      <datalist id="countries">
        <option value="Argentina">
        <option value="Brasil">
        <option value="México">
        <option value="España">
        <option value="Guatemala">
        <option value="United States">
        <!-- Agregar más opciones -->
      </datalist>


    <br>

    <button>Registrarse</button>

    {{#if this.errorMessage}}

      <p class="error">{{this.errorMessage}}</p>

    {{/if}}


  </form>



</div>